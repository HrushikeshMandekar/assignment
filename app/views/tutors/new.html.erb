<h1>Create new tutor for a course</h1>

<% if @tutor.errors.any? %>
  <h2>The following errors prevented the article from being saved</h2>
  <ul>
    <% @tutor.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @tutor, local: true) do |f| %>

  <p>
    <%= f.label :tutor_name %><br/>
    <%= f.text_field :tutor_name %>
  </p>

  <div>
    <%= f.label :course %><br/>
    <div>
      <%= f.collection_select(:course_id, Course.all, :id, :course_name,
      { prompt: "Select the course to which this tutor will be assigned."}, 
      {multiple: false, size: 3})%>
    </div>
  </div>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<p>
  <%= link_to "Cancel and return to course listing page", courses_path %>
</p>
